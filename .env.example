# Copy this file to .env and fill in your actual values.

# OpenAI API key
OPENAI_API_KEY=sk-...

# Directories
PAGES_DIR=pages
OUTPUT_JSONL=ocr_all_pages.jsonl
PER_PAGE_DIR=per_page
OCR_OUTPUT_DIR=ocr_output

# Models
VISION_MODEL=gpt-4o
TEXT_MODEL=gpt-4o-mini

# Concurrency
MAX_WORKERS=4

# Strip / tiling behavior
USE_STRIPS=0          # 0 = off, 1 = always use strips (override auto)
AUTO_STRIP_MODE=1     # 1 = auto-decide per page based on complexity
STRIPS_PER_PAGE=6
MAX_STRIPS_PER_PAGE=8
STRIP_OVERLAP=20

# Complexity thresholds
EASY_INK_THRESHOLD=0.05
DENSE_INK_THRESHOLD=0.12
SUPER_DENSE_INK_THRESHOLD=0.18

# Downscaling limits
MAX_LONG_DIM=2048
MAX_TOTAL_PIXELS=20000000

# Complexity log
COMPLEXITY_LOG=page_complexity.csv

# Optional page range for local runs
# START_PAGE=
# END_PAGE=
